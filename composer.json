{
    "name": "wusong8899/flarum-tournament-widget",
    "description": "Dynamic tournament widget with leaderboard and participation system",
    "type": "flarum-extension",
    "license": "MIT",
    "keywords": [
        "flarum",
        "extension",
        "tournament",
        "widget",
        "leaderboard"
    ],
    "authors": [
        {
            "name": "wusong8899",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "flarum/core": "^1.8",
        "flarum/tags": "^1.8"
    },
    "require-dev": {
        "flarum/testing": "^1.0",
        "flarum/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "wusong8899\\TournamentWidget\\": "src/"
        }
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse --memory-limit=2G",
        "clear-cache:phpstan": "phpstan clear-result-cache",
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit -c tests/phpunit.unit.xml",
        "test:integration": "phpunit -c tests/phpunit.integration.xml",
        "test:setup": "@php tests/integration/setup.php"
    },
    "extra": {
        "flarum-extension": {
            "title": "Tournament Widget",
            "category": "feature",
            "icon": {
                "name": "fas fa-trophy",
                "color": "#FFD700",
                "backgroundColor": "#2a2a3e"
            }
        },
        "flarum-cli": {
            "modules": {
                "phpstan": true,
                "backendTesting": true
            }
        }
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis",
        "test": "Runs all tests.",
        "test:unit": "Runs all unit tests.",
        "test:integration": "Runs all integration tests.",
        "test:setup": "Sets up a database for use with integration tests. Execute this only once."
    },
    "autoload-dev": {
        "psr-4": {
            "wusong8899\\TournamentWidget\\Tests\\": "tests/"
        }
    }
}
