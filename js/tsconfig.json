{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "m",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/**/*",
    "admin.js",
    "forum.js"
  ]
}